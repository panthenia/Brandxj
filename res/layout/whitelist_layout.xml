<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                        android:id="@+id/major_layout"
                        android:background="@drawable/list_item_3d_border"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/major_label"
                                android:textSize="20sp"
                                android:layout_marginLeft="10dp"
                                android:text="Major(精确匹配,长按删除)"
                                android:textColor="#ff0180d5"
                                android:layout_alignParentStart="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="添加"
                                android:id="@+id/major_add"
                                android:textColor="#ff0180d5"
                                android:textSize="20sp"
                                android:clickable="true"
                                android:layout_marginRight="10dp"
                                android:onClick="onAddFilterClicked"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@id/major_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <com.p.DrawMap.Utils.FilterListView
                                android:id="@+id/major_filters"
                                android:layout_width="match_parent"
                                android:layout_below="@id/major_label"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                />

                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/uuid_layout"
                        android:layout_below="@id/major_layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/list_item_3d_border"
                        android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/uuid_label"
                                android:textSize="20sp"
                                android:textColor="#ff0180d5"
                                android:text="UUID(精确匹配,长按删除)"
                                android:layout_marginLeft="10dp"
                                android:layout_alignParentStart="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="添加"
                                android:id="@+id/uuid_add"
                                android:textColor="#ff0180d5"
                                android:textSize="20sp"
                                android:layout_marginRight="10dp"
                                android:clickable="true"
                                android:onClick="onAddFilterClicked"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@id/uuid_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <com.p.DrawMap.Utils.FilterListView
                                android:id="@+id/uuid_filters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/uuid_label"
                                android:layout_marginTop="10dp"
                                />
                </RelativeLayout>
                <RelativeLayout
                        android:layout_below="@id/uuid_layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/list_item_3d_border"
                        android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/type_label"
                                android:textSize="20sp"
                                android:text="TYPE(模糊匹配,长按删除)"
                                android:layout_marginLeft="10dp"
                                android:textColor="#ff0180d5"
                                android:layout_alignParentStart="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="添加"
                                android:id="@+id/type_add"
                                android:textColor="#ff0180d5"
                                android:textSize="20sp"
                                android:layout_marginRight="10dp"
                                android:clickable="true"
                                android:onClick="onAddFilterClicked"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@id/type_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <com.p.DrawMap.Utils.FilterListView
                                android:id="@+id/type_filters"
                                android:layout_below="@id/type_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                />
                </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>